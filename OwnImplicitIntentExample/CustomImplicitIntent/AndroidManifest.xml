<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pcs.customimplicitintent"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity android:name="com.pcs.customimplicitintent.FirstActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="com.pcs.customimplicitintent.SHOW_IMAGE" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.pcs.customimplicitintent.ThirdActivity" >
            <intent-filter>
                <action android:name="com.pcs.customimplicitintent.SHOW_TEXT" />
                <data android:scheme="http"/>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
         <activity android:name="com.pcs.customimplicitintent.SecondAcivity" >
            <intent-filter>
                <action android:name="com.pcs.customimplicitintent.SHOW_TEXT" />
                <data android:scheme="http"/>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    
    </application>

</manifest>